<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<TextView
    android:id="@+id/resetPassword"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:fontFamily="@font/lato_regular"
    android:text="Reset Password"
    android:textColor="@color/black"
    android:textSize="22sp"
    android:textStyle="bold"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/resetPassword"
        app:layout_constraintTop_toBottomOf="@id/resetPassword"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="We will send you the password reset link to your email"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#777777"/>
    <EditText
        android:id="@+id/etResetPassword"
        android:layout_width="0dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@id/tvDescription"
        app:layout_constraintEnd_toEndOf="@id/tvDescription"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:textSize="17sp"
        android:hint="Email"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/etResetPassword"
        app:layout_constraintTop_toBottomOf="@id/etResetPassword"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:weightSum="2">

        <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
            android:id="@+id/cancelRP"
            style="@style/whiteButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:textSize="22sp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="4dp"
            app:spinning_bar_color="@color/white"
            app:spinning_bar_padding="6dp"/>
        <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
            android:id="@+id/sendRP"
            style="@style/blueButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Send"
            android:textSize="22sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp"
            app:spinning_bar_color="@color/white"
            app:spinning_bar_padding="6dp"
            android:layout_marginEnd="7dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>